{
    "name": "devmcc/package-dev",
    "description": "A simple tool for developing Composer packages.",
    "keywords": [
        "composer",
        "packages",
        "package-dev",
        "packagedev",
        "vendor",
        "package development"
    ],
    "license": "MIT",
    "type": "library",
    "authors": [
        {
            "name": "DevMcC",
            "email": "sinbox.c@gmail.com"
        }
    ],
    "require": {
        "php": "^7.1 || ^8.0"
    },
    "autoload": {
        "psr-4": {
            "DevMcC\\PackageDev\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "DevMcC\\PackageDev\\Test\\Unit\\": "tests/Unit"
        }
    },
    "bin": [
        "bin/package-dev"
    ],
    "require-dev": {
        "phpunit/phpunit": "^7",
        "mikey179/vfsstream": "^1.6",
        "phpstan/phpstan": "^0.12.10",
        "phpstan/phpstan-phpunit": "^0.12.6",
        "phpstan/extension-installer": "^1.0",
        "squizlabs/php_codesniffer": "*"
    }
}
